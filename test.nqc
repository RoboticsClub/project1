void moveForward() {
        OnFwd(OUT_A);
        OnFwd(OUT_C);
}

void moveBackward() {
        OnRev(OUT_A);
        OnRev(OUT_C);
}

void turnOffMotors() {
        Off(OUT_A);
        Off(OUT_C);
}

void circle(){
        OnFwd(OUT_A);
        OnRev(OUT_C);
}


void destroyRobot() {
        PlaySound(4);
        circle();
        moveBackward();
        Wait(1000);
}

task main() {
        moveForward();
        
        Wait(400);

        moveBackward();

        Wait(400);

        destroyRobot();
        turnOffMotors();
}
